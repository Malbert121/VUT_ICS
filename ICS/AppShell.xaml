<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ICS.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:a="clr-namespace:ICS.View.Activity"
    xmlns:r="clr-namespace:ICS.View.Rating"
    xmlns:s="clr-namespace:ICS.View.Subject"
    x:Name="AppShellRoot"
    xmlns:local="clr-namespace:ICS"
    Shell.FlyoutBehavior="Disabled"
    Title="ICS">
    <Shell.MenuBarItems>
        <MenuBarItem Text="List">
            <MenuFlyoutItem Text="Activities"
                        Command="{Binding Source={x:Reference AppShellRoot}, Path=GoToActivitiesCommand}" />
            <MenuFlyoutItem Text="Ratings"
                        Command="{Binding Source={x:Reference AppShellRoot}, Path=GoToRatingsCommand}" />
            <MenuFlyoutItem Text="Subjects"
                        Command="{Binding Source={x:Reference AppShellRoot}, Path=GoToSubjectsCommand}" />
        </MenuBarItem>
    </Shell.MenuBarItems>

    <ShellContent ContentTemplate="{DataTemplate r:RatingListView}" Route="ratings" />
    <ShellContent ContentTemplate="{DataTemplate a:ActivityPage}" Route="activities" />
    <ShellContent ContentTemplate="{DataTemplate s:SubjectListView}" Route="subjects" />

</Shell>
