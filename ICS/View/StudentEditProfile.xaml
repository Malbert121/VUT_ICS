<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ICS.StudentEditProfile"
             Title="Edit Profile">
    <ScrollView>
        <StackLayout Padding="20">
            <!-- First Name Entry -->
            <Entry Placeholder="First Name" Text="{Binding FirstName}" FontSize="20" Margin="0,20,0,10" />

            <!-- Last Name Entry -->
            <Entry Placeholder="Last Name" Text="{Binding LastName}" FontSize="20" Margin="0,10"/>

            <!-- Photo Selection -->

            <!-- Subject List -->
            <Label Text="Subject List" FontSize="20" Margin="0,20,0,10"/>
            <!-- Implement your subject list UI here -->

            <!-- Buttons for Adding/Deleting Subjects -->
            <StackLayout Orientation="Horizontal" Margin="0,10">
                <Button Text="Add Subject" Command="{Binding AddSubjectCommand}" HorizontalOptions="StartAndExpand" Margin="10,0"/>
                <Button Text="Delete Subject" Command="{Binding DeleteSubjectCommand}" HorizontalOptions="StartAndExpand" Margin="10,0"/>
            </StackLayout>

            <!-- Save Changes Button -->
            <Button Text="Save Changes" Command="{Binding SaveChangesCommand}" Margin="0,20,0,10"/>
        </StackLayout>
    </ScrollView>
</ContentPage>
