<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ICS.AddNewStudent"
             Title="Add New Student"
             xmlns:viewModels="clr-namespace:ICS.ViewModel.Student">

    <ScrollView>
        <StackLayout Padding="20">

            <Entry Placeholder="First Name" Text="{Binding FirstName}" FontSize="20" Margin="0,20,0,10" />

            <Entry Placeholder="Last Name" Text="{Binding LastName}" FontSize="20" Margin="0,10"/>

            <StackLayout Orientation="Horizontal" Margin="0,10">
                <Label Text="Photo:" FontSize="20" VerticalOptions="Center"/>
                <Button Text="Select Photo" Command="{Binding SelectPhotoCommand}" HorizontalOptions="StartAndExpand" Margin="10,0"/>
            </StackLayout>
             

            <Button Text="Save Changes" Command="{Binding SaveChangesCommand}" Margin="0,20,0,10"/>
        </StackLayout>
    </ScrollView>
</ContentPage>
